<h1>Our Flats</h1>
<br>
  <div class="cards">
        <% @flats.each do |flat| %>
          <div class="card-trip">
            <img src="https://images.unsplash.com/photo-1644292954519-dd04b8fc08a0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" />
            <div class="card-trip-infos">
              <div>
                <h3><%= link_to flat.name, flat_path(flat) %></h3>
                <p><%= flat.address%></p>
                <p><%= '🧍' * flat.number_of_guests%></p>
              </div>
              <div>
                <h2 class="card-trip-pricing"><%= flat.price_per_night%>€</h2>
                <img src="https://images.unsplash.com/photo-1643198964380-a3d9a8b47f68?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80" class="card-trip-user avatar-bordered" />
              </div>
            </div>
          </div>
          <% end %>
    </div>
<br>
<%= link_to 'Create New Flat', new_flat_path, class: "btn btn-primary"%>
